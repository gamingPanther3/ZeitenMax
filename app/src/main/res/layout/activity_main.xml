<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/stopwatch"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="@dimen/taskbar_button_height"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Stoppuhr"
            android:textSize="@dimen/taskbar_button_text_size"
            android:background="@color/colorBTNBackgroundAccent"
            android:drawableTop="@drawable/baseline_access_time_24" />

        <Button
            android:id="@+id/timer"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="@dimen/taskbar_button_height"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Timer"
            android:textSize="@dimen/taskbar_button_text_size"
            android:background="@color/colorBTNBackgroundAccent"
            android:drawableTop="@drawable/baseline_av_timer_24" />
        <Button
            android:id="@+id/alarm"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="@dimen/taskbar_button_height"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Wecker"
            android:textSize="@dimen/taskbar_button_text_size"
            android:background="@color/colorBTNBackgroundAccent"
            android:drawableTop="@drawable/baseline_alarm_24" />

        <Button
            android:id="@+id/settings"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="92dp"
            android:layout_height="@dimen/taskbar_button_height"
            android:layout_weight="1"
            android:text="Einstellungen"
            android:textSize="@dimen/taskbar_button_text_size"
            android:background="@color/colorBTNBackgroundAccent"
            android:drawableTop="@drawable/baseline_settings_24" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>